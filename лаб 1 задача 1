. Даны стороны прямоугольника a и b. Найти его площадь S = a•b и
периметр P = 2•(a + b).

#include<iostream>
using namespace std;
int main(){
	double a, b, s, p;
	cout << "Vvedite storonu A: ";
	cin >> a;
	cout << "Vvedite storonu B: ";
	cin >> b;
	s = a*b;
	p = (a+b)*2;
	cout << "Ploshyad': " << s << endl;
	cout << "Perimetr: " << p;
	return 0;
}
